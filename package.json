{
  "name": "v3ts-template",
  "version": "0.0.1",
  "description": "基于Vue3.0、TypeScript、Element Plus的项目模版，提供开箱即用的开发体验。",
  "author": "thinklf <thinklf97@gmail.com>",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint --fix",
    "log": "conventional-changelog --config ./node_modules/vue-cli-plugin-commitlint/lib/log -i CHANGELOG.md -s -r 0",
    "cz": "npm run log && git add . && git cz",
    "build-report": "vue-cli-service build --report",
    "rm-modules:linux": "rm -rf node_modules",
    "rm-modules:windows": "rd /s/q node_modules "
  },
  "dependencies": {
    "@icon-park/vue-next": "^1.3.3",
    "await-to-js": "^3.0.0",
    "axios": "^0.21.1",
    "clipboard": "^2.0.8",
    "core-js": "^3.10.1",
    "dayjs": "^1.10.4",
    "element-plus": "^1.0.2-beta.37",
    "mitt": "^2.1.0",
    "nprogress": "^0.2.0",
    "qs": "^6.10.1",
    "vue": "^3.0.5",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@types/clipboard": "^2.0.1",
    "@types/nprogress": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "@vue/cli-plugin-babel": "~4.5.12",
    "@vue/cli-plugin-eslint": "~4.5.12",
    "@vue/cli-plugin-router": "~4.5.12",
    "@vue/cli-plugin-typescript": "~4.5.12",
    "@vue/cli-plugin-vuex": "~4.5.12",
    "@vue/cli-service": "~4.5.12",
    "@vue/compiler-sfc": "^3.0.11",
    "@vue/eslint-config-prettier": "^6.0.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-plugin-component": "^1.1.1",
    "babel-plugin-import": "^1.13.3",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "commitizen": "^4.2.3",
    "commitlint": "^12.1.1",
    "compression-webpack-plugin": "^6.1.1",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.23.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "prettier": "^2.2.1",
    "right-pad": "^1.0.1",
    "sass": "^1.32.8",
    "sass-loader": "^8.0.2",
    "script-ext-html-webpack-plugin": "^2.1.5",
    "svg-sprite-loader": "^6.0.2",
    "typescript": "~4.2.4",
    "vue-cli-plugin-commitlint": "^1.0.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/vue-cli-plugin-commitlint/lib/cz"
    }
  }
}
